---
import Layout from "../layouts/WMBase.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
const title = "Contact & Quotes | Window Maintenance Wellington";
const description = "Request a fast quote for single and double-glazed aluminium window and sliding door repairs across Wellington, Porirua, Lower Hutt, Upper Hutt, Petone and Kāpiti.";
const canonical = "https://windowmaintenance.co.nz/contact/";
---
<Layout title={title} description={description} canonical={canonical}>
  <Breadcrumbs />
  <section class="mx-auto max-w-3xl px-6 py-12">
    <h1 class="text-3xl font-extrabold">Contact & Quotes</h1>
    <p class="mt-2 text-slate-300">Same-day replies during business hours. Free quotes in Wellington, Porirua, Lower Hutt, Upper Hutt, Petone and Kāpiti.</p>
    <p class="mt-3 text-sm text-slate-300">Holiday closure: We are closed 20 Dec to 6 Jan. You can still book and we will reply when we return.</p>
    <form action="https://formspree.io/f/xpwqlqjb" method="POST" class="mt-6 space-y-4 rounded-2xl bg-[var(--brand-surface)] p-6 ring-1 ring-white/10" onsubmit="if(window && window.dataLayer){window.dataLayer.push({event:'lead_submit', source:'contact_form', path: location.pathname});}">
      <input type="hidden" name="_subject" value="Website enquiry &mdash; Window Maintenance" />
      <input type="hidden" name="_redirect" value="/thanks/" />
      <input type="text" name="_honeypot" style="display:none" tabindex="-1" autocomplete="off" />
      <label class="block"><span class="text-sm">Name</span><input name="name" required class="mt-1 w-full rounded-lg bg-[var(--brand-bg)] px-3 py-2 ring-1 ring-white/10" /></label>
      <label class="block"><span class="text-sm">Phone</span><input name="phone" type="tel" required class="mt-1 w-full rounded-lg bg-[var(--brand-bg)] px-3 py-2 ring-1 ring-white/10" /></label>
      <label class="block"><span class="text-sm">Email</span><input type="email" name="email" class="mt-1 w-full rounded-lg bg-[var(--brand-bg)] px-3 py-2 ring-1 ring-white/10" /></label>
      <label class="block"><span class="text-sm">Suburb</span><input name="suburb" class="mt-1 w-full rounded-lg bg-[var(--brand-bg)] px-3 py-2 ring-1 ring-white/10" /></label>
      <label class="block"><span class="text-sm">What needs fixing?</span><textarea name="message" rows="5" class="mt-1 w-full rounded-lg bg-[var(--brand-bg)] px-3 py-2 ring-1 ring-white/10"></textarea></label>
      <div class="flex gap-3">
        <button class="btn btn-primary" type="submit">Send</button>
        <a class="btn btn-outline" href="mailto:baeley@windowmaintenance.co.nz">or email us</a>
      </div>
    </form>
    <p class="mt-3 text-xs text-slate-400">After you submit, you’ll land on our <a class="text-amber-400" href="/thanks/">thank-you page</a> so you know it sent.</p>
  </section>
</Layout>
