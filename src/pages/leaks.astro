---
import Layout from "../layouts/WMBase.astro"; import Breadcrumbs from "../components/Breadcrumbs.astro";
import Picture from "../components/Picture.astro"; import QuoteInline from "../components/QuoteInline.astro"; import FAQ from "../components/FAQ.astro";
const title = "Draught & Leak Repairs | Wellington"; const description = "Seal and wedge replacement, latch/handle servicing and sash realignment across Wellington, Porirua and the Hutt Valley to stop draughts and leaks."; const canonical = "https://windowmaintenance.co.nz/leaks/";
---
<Layout title={title} description={description} canonical={canonical}>
  <Breadcrumbs />
  <main class="mx-auto max-w-4xl px-6 py-12">
    <h1 class="text-3xl font-extrabold">Draught & Leak Repairs</h1>
    <p class="mt-4 text-slate-300">We diagnose and fix window draughts and leaks: glazing wedges and seals replaced, sashes re-aligned, and hardware serviced for a tight close.</p>
    <div class="mt-6 grid gap-4 sm:grid-cols-2">
      <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
        <div class="ratio-4-3 card-frame"><Picture base="glazing-wedge" alt="New glazing wedge / rubber seal installed" className="h-full w-full object-cover" /></div>
        <figcaption class="mt-2 text-sm text-slate-400">Glazing wedges & seals</figcaption>
      </figure>
      <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
        <div class="ratio-4-3 card-frame"><Picture base="hinge" alt="Window hinge adjusted for correct seal" className="h-full w-full object-cover" /></div>
        <figcaption class="mt-2 text-sm text-slate-400">Hinge and latch adjustment</figcaption>
      </figure>
    </div>
  </main>
  <QuoteInline title="Get a quote for draught & leak repairs" />
  <FAQ items={[
    { q: 'What causes draughts in aluminium windows?', a: 'Usually shrunken glazing wedges/seals, dropped sashes or latch misalignment. We replace seals, re-align sashes and adjust hardware.' },
    { q: 'Do you work in heavy rain?', a: 'We can diagnose in poor weather but prefer dry conditions for seal replacement to ensure proper adhesion.' }
  ]} />
</Layout>
