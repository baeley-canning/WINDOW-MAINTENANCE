---
import Layout from "../layouts/WMBase.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import Picture from "../components/Picture.astro";
import QuoteInline from "../components/QuoteInline.astro";
import FAQ from "../components/FAQ.astro";

const title = "Draught & Leak Repairs Wellington | Seals & Alignment";
const description = "Single and double-glazed aluminium leak repairs: seals, wedges, latch servicing and sash realignment across Wellington, Porirua and the Hutt Valley.";
const canonical = "https://windowmaintenance.co.nz/leaks/";

const faqItems = [
  { q: "Do you reseal mitred corners and sills?", a: "Yes. We open the joinery, back-seal accessible mitres and re-seal the sill, keeping drainage clear for Wellington weather." },
  { q: "Can you help in coastal Porirua or Petone?", a: "We carry sealants and wedges suited to coastal aluminium joinery and clear weep paths to reduce water tracking." }
];
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqItems.map((item) => ({
    "@type": "Question",
    "name": item.q,
    "acceptedAnswer": { "@type": "Answer", "text": item.a }
  }))
};
---
<Layout title={title} description={description} canonical={canonical} schema={[faqSchema]}>
  <Breadcrumbs />
  <main class="mx-auto max-w-4xl px-6 py-12">
    <h1 class="text-3xl font-extrabold">Draught & Leak Repairs</h1>
    <p class="mt-4 text-slate-300">We diagnose and fix window draughts and leaks across Wellington, Porirua, Lower Hutt, Upper Hutt, Petone and Kāpiti: glazing wedges and seals replaced, sashes re-aligned, and hardware serviced for a tight close.</p>
    <div class="mt-6 grid gap-4 sm:grid-cols-2">
      <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
        <div class="ratio-4-3 card-frame"><Picture base="glazing-wedge" alt="New glazing wedge / rubber seal installed" className="h-full w-full object-cover" /></div>
        <figcaption class="mt-2 text-sm text-slate-400">Glazing wedges & seals</figcaption>
      </figure>
    <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
      <div class="ratio-4-3 card-frame"><Picture base="hinge" alt="Window hinge adjusted for correct seal" className="h-full w-full object-cover" /></div>
      <figcaption class="mt-2 text-sm text-slate-400">Hinge and latch adjustment</figcaption>
    </figure>
    </div>
    <div class="mt-8 space-y-3">
      <h2 class="text-2xl font-bold">Where we work</h2>
      <p class="text-slate-300">Wellington, Porirua, Lower Hutt, Upper Hutt, Petone and Kāpiti.</p>
      <p class="text-slate-300">Related: <a class="text-amber-400 underline" href="/services/mitre-reseal/">Mitre &amp; sill reseal</a> • <a class="text-amber-400 underline" href="/services/window-repairs/">Window repairs</a></p>
    </div>
    <div class="mt-8 space-y-3">
      <h2 class="text-2xl font-bold">Leak repair FAQs</h2>
      <ul class="list-disc space-y-2 pl-5 text-slate-300">
        {faqItems.map(item => <li><strong>{item.q}</strong><br />{item.a}</li>)}
      </ul>
    </div>
    <div class="mt-8 space-y-3">
      <h2 class="text-2xl font-bold">Helpful guides</h2>
      <ul class="list-disc space-y-2 pl-5 text-slate-300">
        <li><a class="text-amber-400 underline" href="/blog/draft-proofing-wellington/">Draft-proofing aluminium windows in Wellington</a></li>
        <li><a class="text-amber-400 underline" href="/blog/resealing-imported-sliders-wellington/">Why aluminium sliders leak and how we reseal them</a></li>
      </ul>
    </div>
  </main>
  <QuoteInline title="Get a quote for draught & leak repairs" />
  <FAQ items={[
    { q: 'What causes draughts in aluminium windows?', a: 'Usually shrunken glazing wedges/seals, dropped sashes or latch misalignment. We replace seals, re-align sashes and adjust hardware.' },
    { q: 'Do you work in heavy rain?', a: 'We can diagnose in poor weather but prefer dry conditions for seal replacement to ensure proper adhesion.' }
  ]} />
</Layout>
