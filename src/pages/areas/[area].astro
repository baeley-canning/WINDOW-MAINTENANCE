---
import Layout from "../../layouts/WMBase.astro"; import Breadcrumbs from "../../components/Breadcrumbs.astro";
export function getStaticPaths() {
  const AREAS = [
    { slug: 'central-wellington', name: 'Central Wellington' },
    { slug: 'porirua', name: 'Porirua' },
    { slug: 'lower-hutt', name: 'Lower Hutt' },
    { slug: 'upper-hutt', name: 'Upper Hutt' },
    { slug: 'petone', name: 'Petone' },
    { slug: 'kapiti', name: 'Kāpiti' },
  ];
  return AREAS.map(a => ({ params: { area: a.slug }, props: { area: a } }));
}
const { area } = Astro.props;
const title = `${area.name} — Aluminium Window & Sliding Door Repairs`;
const description = `Local single and double-glazed aluminium window and ranchslider repairs in ${area.name}. Rollers, tracks, stays, hinges, handles, locks, lockout entry and seal replacements.`;
const canonical = `https://windowmaintenance.co.nz/areas/${area.slug}/`;
---
<Layout title={title} description={description} canonical={canonical}>
  <Breadcrumbs />
  <main class="mx-auto max-w-4xl px-6 py-12">
    <h1 class="text-3xl font-extrabold">{area.name}</h1>
    <p class="mt-3 text-slate-300">We service homes and businesses across {area.name} with fast quotes, tidy workmanship and parts stocked on the van for one-visit fixes where possible.</p>
    <ul class="mt-6 grid gap-3 sm:grid-cols-2">
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/services/sliding-door-repairs/">Sliding/Ranchslider Door Repairs</a></li>
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/services/window-repairs/">Aluminium Window Repairs</a></li>
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/stays/">Stays & Hinges</a></li>
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/leaks/">Draughts & Leaks</a></li>
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/security/">Security Stays</a></li>
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/services/hardware-wedge-replacement/">Hardware & Wedge Replacement</a></li>
      <li class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10"><a class="hover:text-amber-400" href="https://windowmaintenance.co.nz/services/lock-picking/">Lock Picking in {area.name} &amp; Lockout Entry</a></li>
    </ul>
  </main>
</Layout>
