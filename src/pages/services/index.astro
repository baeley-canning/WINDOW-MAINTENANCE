---
import Layout from "../../layouts/WMBase.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
const title = "Services | Aluminium window & door repairs Wellington";
const description = "Single and double-glazed aluminium window/sliding door repairs, window handles/locks (incl. Yale), and front door lock picking across Wellington.";
const canonical = "https://windowmaintenance.co.nz/services/";
---
<Layout title={title} description={description} canonical={canonical}>
  <Breadcrumbs />
  <main class="mx-auto max-w-4xl px-6 py-12">
    <h1 class="text-3xl font-extrabold">Services</h1>
    <p class="mt-4 text-slate-300">Professional single- and double-glazed aluminium joinery repairs and replacements across Wellington.</p>
    <div class="mt-8 grid gap-6 md:grid-cols-3">
      {[
        {href:'/services/sliding-door-repairs/', title:'Sliding/Ranchslider Door Repairs', blurb:'Rollers, tracks, alignment, door handles & locks.', explain:'We replace worn rollers, repair dented tracks, re‑align doors and service door handles/locks for smooth sliding.'},
        {href:'/services/window-repairs/', title:'Aluminium Window Repairs', blurb:'Stays, hinges, latches & draft fixes.', explain:'Fix rattles and drafts, replace stays/hinges, adjust latches and seal gaps.'},
        {href:'/services/joinery-repairs/', title:'Aluminium Joinery Repairs', blurb:'Handles, locks, rollers & seals.', explain:'Joinery repairs for windows/doors: handles, locks, rollers, wedges and leak fixes.'},
        {href:'/services/mitre-reseal/', title:'Mitre & Sill Reseal (Leaks)', blurb:'Stops leaks at mitred corners & sills.', explain:'Open the joinery, back-seal mitres, re-seal sills, keep drainage open, hose-test.'},
        {href:'/stays/', title:'Stays & Hinges', blurb:'Awning stays, restrictors & hinge service.', explain:'Replace bent awning stays and fit restrictors; windows open, hold position and seal properly.'},
        {href:'/leaks/', title:'Draughts & Leaks', blurb:'Seal, wedge and alignment fixes.', explain:'Replace glazing wedges/seals and re‑align sashes to stop drafts and leaks.'},
        {href:'/security/', title:'Security Stays', blurb:'Limit opening for safety & security.', explain:'Install restrictors to limit opening for child safety and ground‑floor security.'},
        {href:'/services/hardware-wedge-replacement/', title:'Hardware & Wedge Replacement', blurb:'Window/door handles, Yale window locks, wedges & seals.', explain:'Supply and fit window handles, door handles, Yale window locks, safety stays, wedges and seals matched to your joinery.'},
        {href:'/services/front-door-lock-picking/', title:'Front Door Lock Picking', blurb:'Non-destructive entry for locked doors.', explain:'Locked out? We pick compatible front door locks and restore entry with minimal damage, then service or replace cylinders if needed.'},
      ].map(item => (
        <details class="group relative rounded-2xl bg-[var(--brand-surface)] p-6 ring-1 ring-white/10 transition hover:-translate-y-0.5 hover:bg-[var(--brand-surface)] hover:shadow-lg hover:shadow-black/20">
          <summary class="cursor-pointer list-none pr-8">
            <div class="absolute right-3 top-3 card-info rounded-full bg-slate-800 px-2 py-1 text-slate-300">i</div>
            <h2 class="font-semibold text-white">{item.title}</h2>
            <p class="mt-2 text-sm text-slate-300">{item.blurb}</p>
          </summary>
          {/* Single explain block: shows on mobile when open, and on desktop hover */}
          <div class="mt-3 hidden text-sm text-slate-300 md:block md:max-h-0 md:overflow-hidden md:opacity-0 md:transition-all md:duration-300 md:group-hover:max-h-40 md:group-hover:opacity-100 group-open:block md:group-open:max-h-40 md:group-open:opacity-100">
            {item.explain} <a href={item.href} class="ml-2 text-amber-400 underline">Learn more</a>
          </div>
        </details>
      ))}
    </div>
  </main>
</Layout>
