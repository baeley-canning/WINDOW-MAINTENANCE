---
import Layout from "../../layouts/WMBase.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import FAQ from "../../components/FAQ.astro";
import Picture from "../../components/Picture.astro";
import QuoteInline from "../../components/QuoteInline.astro";

const title = "Sliding Door Repairs Wellington | Rollers & Tracks";
const description = "Roller replacement, track refurbishment, alignment and lock fixes for sliding and ranchslider doors in Wellington, Porirua and the Hutt Valley.";
const canonical = "https://windowmaintenance.co.nz/services/sliding-door-repairs/";

const faqItems = [
  { q: "Do you service Porirua and the Hutt?", a: "Yes. We’re on the road in Porirua, Lower Hutt and Upper Hutt every week and can group nearby jobs to keep pricing sharp." },
  { q: "Can you fix water tracking at the sill?", a: "We clear weep holes, restore damaged tracks, and reseal accessible beads so water drains properly during Wellington southerlies." }
];
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqItems.map((item) => ({
    "@type": "Question",
    "name": item.q,
    "acceptedAnswer": { "@type": "Answer", "text": item.a }
  }))
};
---
<Layout title={title} description={description} canonical={canonical} schema={[faqSchema]}>
  <Breadcrumbs />
  <main class="mx-auto max-w-4xl px-6 py-12">
    <h1 class="text-3xl font-extrabold">Sliding / Ranchslider Door Repairs</h1>
    <p class="mt-4 text-slate-300">Roller replacement, track refurbishment, alignment and lock repairs for sliding and ranchslider doors across Wellington.</p>
    <h2 class="mt-10 text-2xl font-bold">Common parts we replace</h2>
    <div class="mt-4 grid gap-4 sm:grid-cols-2">

    <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
      <div class="ratio-4-3 card-frame">
        <Picture base="sliding-door-roller" alt="Sliding door roller carriage and wheel" className="h-full w-full object-cover" />
      </div>
    </figure>
    <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
      <div class="ratio-4-3 card-frame">
        <Picture base="ranchslider-handle-lockset" alt="Ranchslider handle and lock set" className="h-full w-full object-cover" />
      </div>
    </figure>
    <figure class="rounded-xl bg-[var(--brand-surface)] p-4 ring-1 ring-white/10">
      <div class="ratio-4-3 card-frame">
        <Picture base="euro-lock-cylinder" alt="Euro profile lock cylinder for sliding door" className="h-full w-full object-cover" />
      </div>
    </figure>
    </div>
    <div class="mt-8 space-y-3">
      <h2 class="text-2xl font-bold">Where we work</h2>
      <p class="text-slate-300">Wellington, Porirua, Lower Hutt, Upper Hutt, Petone and Kāpiti. Same-week bookings whenever possible.</p>
      <p class="text-slate-300">Related services: <a class="text-amber-400 underline" href="/services/window-repairs/">Window repairs</a> • <a class="text-amber-400 underline" href="/services/mitre-reseal/">Mitre &amp; sill reseal</a></p>
    </div>
    <div class="mt-8 space-y-3">
      <h2 class="text-2xl font-bold">Sliding door FAQs</h2>
      <ul class="list-disc space-y-2 pl-5 text-slate-300">
        {faqItems.map(item => <li><strong>{item.q}</strong><br />{item.a}</li>)}
      </ul>
    </div>
  </main>
  <QuoteInline title="Get a quote for sliding/ranchslider repairs" />
</Layout>
