# Minimal htaccess for cPanel (no headers to avoid syntax issues)
Options -Indexes
DirectoryIndex index.html
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} off [OR]
  RewriteCond %{HTTP_HOST} ^www\.windowmaintenance\.co\.nz$ [NC]
  RewriteRule ^(.*)$ https://windowmaintenance.co.nz/$1 [R=301,L]
  RewriteCond %{THE_REQUEST} \s/+(.*)/index\.html [NC]
  RewriteRule ^ %1 [R=301,L]
  RewriteRule ^services/ranchslider-repairs\.html$ /services/sliding-door-repairs/ [R=301,L]
  RewriteRule ^services/hardware-repairs\.html$ /services/hardware-wedge-replacement/ [R=301,L]
  RewriteRule ^services/security-screens\.html$ /services/ [R=301,L]
  RewriteRule ^services/leak-repair\.html$ /services/mitre-reseal/ [R=301,L]
  RewriteRule ^services/joinery-repairs\.html$ /services/joinery-repairs/ [R=301,L]
  RewriteRule ^services/front-door-lock-picking/?$ /services/lock-picking/ [R=301,L]
  RewriteRule ^services/front-door-lock-picking\.html$ /services/lock-picking/ [R=301,L]
  RewriteRule ^sliders/?$ /services/sliding-door-repairs/ [R=301,L]
  RewriteRule ^windows/?$ /services/window-repairs/ [R=301,L]
  RewriteRule ^hardware/?$ /services/hardware-wedge-replacement/ [R=301,L]
  RewriteCond %{REQUEST_URI} !/$
  RewriteRule ^(stays|leaks|security)$ /$1/ [R=301,L]
  RewriteRule ^services/mitre-reseal\.html$ /services/mitre-reseal/ [R=301,L]
  RewriteRule ^sitemap(\.xml)?$ sitemap-index.xml [L]
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
  Header set X-Content-Type-Options "nosniff"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Cross-Origin-Opener-Policy "same-origin-allow-popups"
  Header set Permissions-Policy "geolocation=(), camera=(), microphone=()"
  Header set X-Frame-Options "SAMEORIGIN"
  <FilesMatch "\.(css|js|mjs|webp|jpg|jpeg|png|svg|ico|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, must-revalidate"
  </FilesMatch>
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://googleads.g.doubleclick.net https://www.googleadservices.com https://analytics.ahrefs.com; connect-src 'self' https://www.google-analytics.com https://region1.google-analytics.com https://www.googletagmanager.com https://www.google.com https://googleads.g.doubleclick.net https://www.googleadservices.com https://stats.g.doubleclick.net https://analytics.ahrefs.com; img-src 'self' data: https://www.google-analytics.com https://www.googletagmanager.com https://googleads.g.doubleclick.net https://www.google.com https://www.googleadservices.com https://stats.g.doubleclick.net https://analytics.ahrefs.com; style-src 'self' 'unsafe-inline'; font-src 'self' data:; form-action 'self' https://formspree.io; frame-src 'self' https://www.googletagmanager.com; frame-ancestors 'self'; base-uri 'self'"
</IfModule>
